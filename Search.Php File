<!--This is php query connects with the database for the search query-->

                                <?php 
                                    $con = mysqli_connect("localhost","","","NYCrimeData");

                                    if(isset($_GET['search']))
                                    {
                                        $filtervalues = $_GET['search'];
                                        $query = "SELECT * FROM NYdata WHERE CONCAT(OFNS_DESC,Street,Postcode,District,County) LIKE '%$filtervalues%' ";
                                        $query_run = mysqli_query($con, $query);

                                        if(mysqli_num_rows($query_run) > 0)
                                        {
                                            foreach($query_run as $items)
                                            {
                                                ?>
<!--Search for following matching items start-->
                                                <tr>
                                                    <td><?= $items['OFNS_DESC']; ?></td>
                                                    <td><?= $items['Street']; ?></td>
                                                    <td><?= $items['Postcode']; ?></td>
                                                    <td><?= $items['District']; ?></td>
                                                    <td><?= $items['County']; ?></td>
                                                </tr>
<!--Search for following matching items end-->

                                                <?php
                                            }
                                        }
                                        else
                                        {
                                            ?>
                                            
                                            <!-- error message start-->
                                                <tr>
                                                    <td colspan="4">No Record Found</td>
                                                </tr>
                                            <!-- error message end-->
                                            
                                            <?php
                                        }
                                    }
                                ?>
                            </tbody>
                        </table>
